<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.mandic.trackmynight.MainActivity">


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.562"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <Button
            android:id="@+id/reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="19dp"
            android:onClick="ZurÃ¼cksetzen"
            android:text="@string/zuruecksetzen" />

        <Button
            android:id="@+id/promille"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/getraenkezaehler"
            android:layout_marginTop="15dp"
            android:onClick="promilleberechnen"
            android:text="@string/promille" />

        <ToggleButton
            android:id="@+id/trackingbtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/reset"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:textOff="@string/begintracking"
            android:textOn="@string/stoptracking"/>
        <Button
            android:id="@+id/getraenkezaehler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/UserProfil"
            android:layout_marginTop="15dp"
            android:onClick="getraenkeauswahl"
            android:text="@string/getraenkewahl" />

        <Button
            android:id="@+id/UserProfil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:onClick="userprofil"
            android:text="@string/userProfil" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
